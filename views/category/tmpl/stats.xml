<metadata>
	<layout title="Member Stats Layout">
		<message>
			<![CDATA[MEMBER STATS LAYOUT DESC]]>
		</message>
	</layout>
	<state>
		<name>Members Stats Layout</name>
		<description>MEMBER STATS LAYOUT DESC</description>
		<url addpath="/administrator/components/com_club/elements">
			<param name="catid" type="category" scope="com_club" default="0" label="Select Stats" description="A members stats" />
		</url>
		<params>
			<param name="image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Image" description="PARAMIMAGE" />
			<param name="image_align" type="radio" default="right" label="Image Align" description="Alignment of the image">
				<option value="left">Left</option>
				<option value="right">Right</option>
			</param>
			<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="show_limit" type="radio" default="0" label="Limit Box" description="PARAMSHOWLIMIT">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_feed_link" type="radio" default="1" label="Show a feed link" description="PARAMSHOWFEEDLINK">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
		</params>
	</state>
</metadata>
